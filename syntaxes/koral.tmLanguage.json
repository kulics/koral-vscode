{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Koral",
  "scopeName": "source.koral",
  "foldingStartMarker": "^\\s*(?:/\\*|//\\s*#?region\\b|(?:let|type|given|using|if|when|while|for)\\b.*\\{\\s*$|\\{\\s*$)",
  "foldingStopMarker": "^\\s*(?:\\*/|//\\s*#?endregion\\b|\\})\\s*$",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#types"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.koral",
          "begin": "//",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.koral"
            }
          },
          "end": "$\\n?"
        },
        {
          "name": "comment.block.koral",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.begin.koral"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.end.koral"
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.koral",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.koral",
              "match": "\\\\[ntrfv0\\\\\"']"
            },
            {
              "name": "meta.interpolation.koral",
              "begin": "\\\\\\(",
              "end": "\\)",
              "patterns": [
                {
                  "include": "$self"
                }
              ]
            }
          ]
        },
        {
          "name": "string.quoted.single.koral",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.koral",
              "match": "\\\\[ntrfv0\\\\\"']"
            },
            {
              "name": "meta.interpolation.koral",
              "begin": "\\\\\\(",
              "end": "\\)",
              "patterns": [
                {
                  "include": "$self"
                }
              ]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.koral",
          "match": "\\b(?:0b[01_]+|0o[0-7_]+|0x[0-9A-Fa-f_]+|\\d[\\d_]*\\.\\d[\\d_]*|\\d[\\d_]*)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.koral",
          "match": "\\b(?:if|then|else|when|while|for|break|continue|return|defer|is|and|or|not|deref|deptr)\\b"
        },
        {
          "name": "keyword.declaration.koral",
          "match": "\\b(?:let|mut|type|trait|given|using|public|private|protected|foreign|intrinsic|ref|ptr|weakref)\\b"
        },
        {
          "name": "variable.language.koral",
          "match": "\\b(?:self|super|Self)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.builtin.koral",
          "match": "\\b(?:Int|UInt|Int8|UInt8|Int16|UInt16|Int32|UInt32|Int64|UInt64|Float32|Float64|Bool|String|Void|Rune|Option|Result|List|Map|Set|Stream)\\b"
        },
        {
          "name": "entity.name.type.koral",
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function.declaration.koral",
          "match": "\\b(let)\\s+(\\[[^\\]]*\\])?\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": {
              "name": "keyword.declaration.function.koral"
            },
            "2": {
              "name": "meta.generic-params.koral"
            },
            "3": {
              "name": "entity.name.function.koral"
            }
          }
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.koral",
          "match": "\\b(?:true|false)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.koral",
          "match": "(?:<\\.\\.<|\\.\\.<|<\\.\\.|\\.\\.\\.<|<\\.\\.\\.|\\.\\.\\.\\.|\\.\\.\\.|\\.\\.|<>|<<=|>>=|<<|>>|==|<=|>=|->|\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|[+\\-*/%&|^~=<>:.])"
        }
      ]
    }
  }
}
